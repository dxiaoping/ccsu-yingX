.bodyer-input{
    padding-top: 85rpx;
    width: 620rpx;
    display:block;/*居中*/
    margin:0 auto;
}
.bodyer .bodyer-input .id{
    height: 90rpx;
    background-color: #fbfbfb;
    border: 1rpx solid #fbfbfb;
    border-radius: 15rpx;
}
.bodyer .bodyer-input .password{
    height: 90rpx;
    background-color: #fbfbfb;
    border: 1rpx solid #fbfbfb;
    border-radius: 15rpx;
    margin-top: 43rpx;
}
.bodyer .bodyer-input .forget{
    float: right;
    margin: 0;
    padding: 0;
    color: #c3c3c3;
}
.bodyer .bodyer-input text{
    display:inline-block;
    padding-left: 28rpx;
    padding-right: 20rpx;
    line-height: 90rpx;
    float: left;
}
.bodyer .bodyer-input .id text:after{
    content: "|";
    color: #e3e3e3;
    padding-left: 10rpx;
}
.bodyer .bodyer-input .password text:after{
    content: "|";
    color: #e3e3e3;
    padding-left: 10rpx;
}
.bodyer .bodyer-input input{
    float: left;
    display:inline-block;
    height: 90rpx;
    width: 400rpx;
}
.bodyer .login{
    background-color: #19B4EC;
    margin-top: 178rpx;
    height: 74prx;
}

