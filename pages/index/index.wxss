.menu {
  margin-top: 8px;
  width: 100%;
  display: flex;
  padding: 8px;
  flex-direction: row;
  background-color: #fff;
}

.menu-item {
  padding-top: 0rpx;
  padding-left: 22rpx;
  padding-right: 22rpx;
  padding-bottom: 22rpx;
  text-align: center;
  background-color: #fff;
  width: 25%;
}

.menu-icon {
  width: 180rpx;
  height: 180rpx;
}

.menu-name {
  width: 180rpx;
  margin-top: 10rpx;
  font-size: 39rpx;
}

.search-view{
  display: flex;
  margin: 10px 0px 1px 0px; /* 上 右 下 左*//* 内边距 *//* padding： */
  margin-bottom: 10px;
}
.search-input{
  background-color: #F0F0F0;
  height: 40px;
  border-radius: 10px;
  /* width: 75%; */
}
.search-button{
  background-color: #d0d0d0;
  border-radius: 10px;
  text-align: center;
  /* width: 25%; */
}
.placeholder-class {
  display: flex;
  align-items: center;
  justify-content: center;  
  font-size: 20px;
}
.yy-view{
  display: flex;
  align-items: center;
  justify-content: center;
}
.yy-button{
  width: 80px;
  height: 80px;
}

